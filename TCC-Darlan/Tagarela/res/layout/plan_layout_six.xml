<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/L06S00"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/symbol_one"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/imagem" />

    <ImageView
        android:id="@+id/L06S03"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/symbol_two"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/imagem" />

    <ImageView
        android:id="@+id/L06S06"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/symbol_three"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/imagem" />

</LinearLayout>